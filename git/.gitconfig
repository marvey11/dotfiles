[core]
    editor = vim
    autocrlf = input

[alias]
    # Short and sweet
    br = branch
    co = checkout
    cb = checkout -b
    ci = commit
    cm = commit -m
    pl = pull
    ps = push
    st = status
    sw = switch
    
    # Prettier log view
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[init]
    defaultBranch = main

[pull]
    rebase = false

[color]
    ui = auto

[push]
    autoSetupRemote = true

[include]
    path = ~/.gitconfig.local
